
#include <stdio.h>
int sicalculator() {
    int p, t, r, si;
    printf ("enter the value of principle amount/n");
    scanf("%d",&p);
    printf ("enter the year/n");
    scanf ("%d",&t);
    printf("enter the interest/n");
    scanf ("%d",r);
    si=(p*t*r)/100;
    printf ("the simple interest is:%d/n",si);
}

int main () {
    sicalculator() ;
}
