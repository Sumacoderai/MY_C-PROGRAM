#include <stdio.h>

// Function to check pass/fail for each subject
int checkPass(int m1, int m2, int m3) {
    if (m1 >= 40 && m2 >= 40 && m3 >= 40)
        return 1;   // Passed all
    else
        return 0;   // Failed any one
}

int main() {
    int s1, s2, s3;
    float avg;

    // Input
    printf("Enter marks of 3 subjects:\n");
    scanf("%d %d %d", &s1, &s2, &s3);

    // Calculate average
    avg = (s1 + s2 + s3) / 3.0;

    printf("\nAverage Marks = %.2f\n", avg);

    // Check pass/fail using function
    if (checkPass(s1, s2, s3)) {
        printf("Status: PASSED\n");

        // Determine class
        if (avg >= 75)
            printf("Result: Distinction\n");
        else if (avg >= 60)
            printf("Result: First Class\n");
        else if (avg >= 50)
            printf("Result: Second Class\n");
        else
            printf("Result: Pass Class\n");
    }
    else {
        printf("Status: FAILED (Below 40 in at least one subject)\n");
    }

    return 0;
}
